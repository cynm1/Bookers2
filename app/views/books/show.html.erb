<main>
  <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
          <br>
          <%= link_to current_user.name,user_path %>
        </td>
        <td>
          <%= link_to book.title,book_path(book) %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <button type="button" class="btn btn-success"><%= link_to "Edit",edit_book_path %></button>
        </td>
        <td>
          <button type="button" class="btn btn-danger">
            <%= link_to "Destroy", book_path(book), method: :delete %>
          </button>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</main>