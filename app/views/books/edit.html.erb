<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
        <%= form_with model: @book do |f| %>
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title" %><br>
          <label for="inputBody">Opinion</label><br>
          <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"Body" %><br>
          <button type="submit" class="btn btn-success">Update Book</button>
        <% end %>
          <%= link_to "Show", @book %>|
          <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>